---
import AdminLayout from "../../layouts/AdminLayout.astro";

const title = "Assignments";
---

<AdminLayout title={title} selectedItem="assignments">
  <div class="admin-assignments">
    <div class="admin-header">
      <h1>Manage Assignments</h1>
      <p>Create and manage assignments for your students</p>
      
      <div class="action-bar">
        <div class="search-container">
          <input 
            type="text" 
            id="assignment-search" 
            placeholder="Search assignments..." 
            class="search-input"
          />
          <button class="search-button">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="11" cy="11" r="8"></circle>
              <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
          </button>
        </div>
        
        <div class="buttons-container">
          <button class="filter-button">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
            </svg>
            Filter
          </button>
          <a href="/admin/assignments/new" class="add-button">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="12" y1="5" x2="12" y2="19"></line>
              <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            Create Assignment
          </a>
        </div>
      </div>
    </div>
    
    <div class="assignments-grid">
      <!-- Sample Assignment Card -->
      <div class="assignment-card">
        <div class="assignment-header">
          <div class="assignment-icon">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="16" y1="13" x2="8" y2="13"></line>
              <line x1="16" y1="17" x2="8" y2="17"></line>
              <polyline points="10 9 9 9 8 9"></polyline>
            </svg>
          </div>
          <div class="assignment-badge">Active</div>
        </div>
        <h3 class="assignment-title">Introduction to Algebra</h3>
        <p class="assignment-description">Basic algebra concepts including variables, expressions, and equations.</p>
        
        <div class="assignment-meta">
          <div class="meta-item">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
            <span>Due: May 15, 2023</span>
          </div>
          <div class="meta-item">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
            <span>32 students</span>
          </div>
        </div>
        
        <div class="assignment-footer">
          <button class="action-button">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
              <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
            </svg>
            <span>Edit</span>
          </button>
          <button class="action-button">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="9 11 12 14 22 4"></polyline>
              <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path>
            </svg>
            <span>Grade</span>
          </button>
          <button class="action-button delete">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="3 6 5 6 21 6"></polyline>
              <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
            </svg>
            <span>Delete</span>
          </button>
        </div>
      </div>
      
      <!-- Sample Assignment Card (Draft) -->
      <div class="assignment-card">
        <div class="assignment-header">
          <div class="assignment-icon draft">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="16" y1="13" x2="8" y2="13"></line>
              <line x1="16" y1="17" x2="8" y2="17"></line>
              <polyline points="10 9 9 9 8 9"></polyline>
            </svg>
          </div>
          <div class="assignment-badge draft">Draft</div>
        </div>
        <h3 class="assignment-title">Geometry Basics</h3>
        <p class="assignment-description">Introduction to geometric shapes, angles, and basic theorems.</p>
        
        <div class="assignment-meta">
          <div class="meta-item">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
            <span>Not scheduled</span>
          </div>
          <div class="meta-item">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="16" y1="2" x2="16" y2="6"></line>
              <line x1="8" y1="2" x2="8" y2="6"></line>
              <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
            <span>Created yesterday</span>
          </div>
        </div>
        
        <div class="assignment-footer">
          <button class="action-button">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
              <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
            </svg>
            <span>Edit</span>
          </button>
          <button class="action-button">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="22 7 13.5 15.5 8.5 10.5 2 17"></polyline>
              <polyline points="16 7 22 7 22 13"></polyline>
            </svg>
            <span>Publish</span>
          </button>
          <button class="action-button delete">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="3 6 5 6 21 6"></polyline>
              <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
            </svg>
            <span>Delete</span>
          </button>
        </div>
      </div>
      
      <!-- Add more assignment cards as needed -->
      
      <!-- Empty State (hidden by default) -->
      <div id="empty-state" class="empty-state" style="display: none;">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
          <polyline points="14 2 14 8 20 8"></polyline>
          <line x1="16" y1="13" x2="8" y2="13"></line>
          <line x1="16" y1="17" x2="8" y2="17"></line>
          <polyline points="10 9 9 9 8 9"></polyline>
        </svg>
        <p>No assignments yet</p>
        <a href="/admin/assignments/new" class="add-first-button">Create your first assignment</a>
      </div>
    </div>
  </div>
</AdminLayout>

<style>
  .admin-assignments {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  
  .admin-header {
    margin-bottom: 2rem;
  }
  
  .admin-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: white;
  }
  
  .admin-header p {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 2rem;
  }
  
  .action-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }
  
  .search-container {
    position: relative;
    flex-grow: 1;
  }
  
  .search-input {
    width: 100%;
    padding: 0.75rem 1rem;
    padding-right: 3rem;
    border-radius: 6px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background-color: rgba(255, 255, 255, 0.05);
    color: white;
    font-size: 1rem;
  }
  
  .search-input:focus {
    outline: none;
    border-color: rgb(136, 58, 234);
  }
  
  .search-button {
    position: absolute;
    right: 0;
    top: 0;
    bottom: 0;
    background: none;
    border: none;
    padding: 0 1rem;
    color: white;
    cursor: pointer;
  }
  
  .search-button svg {
    width: 18px;
    height: 18px;
  }
  
  .buttons-container {
    display: flex;
    gap: 1rem;
  }
  
  .filter-button, .add-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    border-radius: 6px;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.2s;
  }
  
  .filter-button {
    background-color: rgba(255, 255, 255, 0.1);
    border: none;
    color: white;
  }
  
  .filter-button:hover {
    background-color: rgba(255, 255, 255, 0.15);
  }
  
  .add-button {
    background-color: rgb(136, 58, 234);
    border: none;
    color: white;
    text-decoration: none;
  }
  
  .add-button:hover {
    background-color: rgba(136, 58, 234, 0.8);
  }
  
  .filter-button svg, .add-button svg {
    width: 18px;
    height: 18px;
  }
  
  .assignments-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }
  
  .assignment-card {
    background-color: #1a1c25;
    border-radius: 8px;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  
  .assignment-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }
  
  .assignment-icon {
    width: 40px;
    height: 40px;
    border-radius: 8px;
    background-color: rgba(136, 58, 234, 0.15);
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgb(136, 58, 234);
  }
  
  .assignment-icon.draft {
    background-color: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.5);
  }
  
  .assignment-icon svg {
    width: 24px;
    height: 24px;
  }
  
  .assignment-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 50px;
    background-color: rgba(46, 204, 113, 0.1);
    color: rgb(46, 204, 113);
    font-size: 0.8rem;
    font-weight: 500;
  }
  
  .assignment-badge.draft {
    background-color: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.5);
  }
  
  .assignment-title {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: white;
  }
  
  .assignment-description {
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }
  
  .assignment-meta {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }
  
  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.9rem;
  }
  
  .meta-item svg {
    width: 14px;
    height: 14px;
  }
  
  .assignment-footer {
    margin-top: auto;
    display: flex;
    justify-content: space-between;
    gap: 0.5rem;
  }
  
  .action-button {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.5rem;
    background-color: rgba(255, 255, 255, 0.05);
    border: none;
    border-radius: 6px;
    color: rgba(255, 255, 255, 0.7);
    cursor: pointer;
    transition: background-color 0.2s;
    flex: 1;
    justify-content: center;
  }
  
  .action-button svg {
    width: 16px;
    height: 16px;
  }
  
  .action-button:hover {
    background-color: rgba(255, 255, 255, 0.1);
    color: white;
  }
  
  .action-button.delete {
    color: rgba(231, 76, 60, 0.7);
  }
  
  .action-button.delete:hover {
    background-color: rgba(231, 76, 60, 0.1);
    color: rgb(231, 76, 60);
  }
  
  .empty-state {
    grid-column: 1 / -1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    background-color: #1a1c25;
    border-radius: 8px;
    color: rgba(255, 255, 255, 0.4);
    text-align: center;
  }
  
  .empty-state svg {
    width: 64px;
    height: 64px;
    margin-bottom: 1.5rem;
  }
  
  .empty-state p {
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
  }
  
  .add-first-button {
    background-color: rgb(136, 58, 234);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 500;
    transition: background-color 0.2s;
  }
  
  .add-first-button:hover {
    background-color: rgba(136, 58, 234, 0.8);
  }
  
  @media (max-width: 768px) {
    .action-bar {
      flex-direction: column;
      align-items: stretch;
    }
    
    .buttons-container {
      justify-content: space-between;
    }
    
    .assignments-grid {
      grid-template-columns: 1fr;
    }
  }
</style>