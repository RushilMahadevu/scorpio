          <tr>
            <td>
              <div class="student-name">
                <div class="student-avatar">MB</div>
                <div>Michael Brown</div>
              </div>
            </td>
            <td>Science Lab: Chemical Reactions</td>
            <td>Science 102</td>
            <td>May 20, 2023</td>
            <td>-/100</td>
            <td>-</td>
            <td><span class="status-badge ungraded">Ungraded</span></td>
            <td>
              <div class="actions-cell">
                <button class="action-button" title="View Details">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                    <circle cx="12" cy="12" r="3"></circle>
                  </svg>
                </button>
                <button class="action-button" title="Grade Assignment">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="9 11 12 14 22 4"></polyline>
                    <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path>
                  </svg>
