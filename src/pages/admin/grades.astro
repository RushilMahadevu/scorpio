---
import AdminLayout from "../../layouts/AdminLayout.astro";

const title = "Grades";
---

<AdminLayout title={title} selectedItem="grades">
  <div class="admin-grades">
    <div class="admin-header">
      <h1>Student Grades</h1>
      <p>Manage and review student grades across all classes</p>
      
      <div class="action-bar">
        <div class="search-container">
          <input 
            type="text" 
            id="grade-search" 
            placeholder="Search by student or assignment..." 
            class="search-input"
          />
          <button class="search-button">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="11" cy="11" r="8"></circle>
              <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
          </button>
        </div>
        
        <div class="buttons-container">
          <div class="dropdown">
            <button class="filter-button">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
              </svg>
              Filter
              <svg class="chevron" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="6 9 12 15 18 9"></polyline>
              </svg>
            </button>
            <div class="dropdown-content">
              <div class="dropdown-item">
                <label>
                  <input type="checkbox" checked value="all" /> All Classes
                </label>
              </div>
              <div class="dropdown-item">
                <label>
                  <input type="checkbox" value="math101" /> Mathematics 101
                </label>
              </div>
              <div class="dropdown-item">
                <label>
                  <input type="checkbox" value="science102" /> Science 102
                </label>
              </div>
              <div class="dropdown-item">
                <label>
                  <input type="checkbox" value="history201" /> History 201
                </label>
              </div>
              <div class="dropdown-divider"></div>
              <div class="dropdown-item">
                <label>
                  <input type="checkbox" checked value="all-assignments" /> All Assignments
                </label>
              </div>
              <div class="dropdown-item">
                <label>
                  <input type="checkbox" value="quiz" /> Quizzes
                </label>
              </div>
              <div class="dropdown-item">
                <label>
                  <input type="checkbox" value="exam" /> Exams
                </label>
              </div>
              <div class="dropdown-item">
                <label>
                  <input type="checkbox" value="homework" /> Homework
                </label>
              </div>
            </div>
          </div>
          
          <button class="export-button">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
              <polyline points="7 10 12 15 17 10"></polyline>
              <line x1="12" y1="15" x2="12" y2="3"></line>
            </svg>
            Export
          </button>
          
          <a href="/admin/grades/import" class="import-button">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
              <polyline points="17 8 12 3 7 8"></polyline>
              <line x1="12" y1="3" x2="12" y2="15"></line>
            </svg>
            Import Grades
          </a>
        </div>
      </div>
    </div>
    
    <div class="grade-tabs">
      <div class="grade-tab active" data-tab="all">All Grades</div>
      <div class="grade-tab" data-tab="ungraded">Ungraded</div>
      <div class="grade-tab" data-tab="recent">Recently Graded</div>
    </div>
    
    <div class="grades-table-container">
      <table class="grades-table">
        <thead>
          <tr>
            <th>Student</th>
            <th>Assignment</th>
            <th>Class</th>
            <th>Due Date</th>
            <th>Score</th>
            <th>Grade</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="grades-table-body">
          <tr>
            <td>
              <div class="student-name">
                <div class="student-avatar">JS</div>
                <div>John Smith</div>
