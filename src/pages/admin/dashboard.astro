---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { getCurrentUser } from "../../lib/firebase";

const title = "Dashboard";
---

<AdminLayout title={title} selectedItem="dashboard">
  <div class="admin-dashboard">
    <div class="admin-header">
      <h1>Teacher Dashboard</h1>
      <p class="welcome-message">Welcome back, <span id="teacher-name">Teacher</span>!</p>
    </div>
    
    <div class="stats-cards">
      <div class="stat-card">
        <div class="stat-icon students-icon">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
            <circle cx="9" cy="7" r="4"></circle>
            <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
            <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
          </svg>
        </div>
        <div class="stat-content">
          <div class="stat-value">0</div>
          <div class="stat-label">Students</div>
        </div>
        <a href="/admin/students" class="stat-action">View all</a>
      </div>
      
      <div class="stat-card">
        <div class="stat-icon assignments-icon">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
            <polyline points="10 9 9 9 8 9"></polyline>
          </svg>
        </div>
        <div class="stat-content">
          <div class="stat-value">0</div>
          <div class="stat-label">Assignments</div>
        </div>
        <a href="/admin/assignments" class="stat-action">View all</a>
      </div>
      
      <div class="stat-card">
        <div class="stat-icon pending-icon">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
        </div>
        <div class="stat-content">
          <div class="stat-value">0</div>
          <div class="stat-label">Pending Submissions</div>
        </div>
        <a href="/admin/submissions" class="stat-action">Review</a>
      </div>
      
      <div class="stat-card">
        <div class="stat-icon admins-icon">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
        </div>
        <div class="stat-content">
          <div id="admin-count" class="stat-value">0</div>
          <div class="stat-label">Admin Users</div>
        </div>
        <a href="/admin/admins" class="stat-action">Manage</a>
      </div>
    </div>
    
    <div class="dashboard-sections">
      <div class="dashboard-section">
        <div class="section-header">
          <h2>Recent Activities</h2>
          <a href="/admin/activities" class="view-all">View all</a>
        </div>
        <div class="activity-list">
          <div class="empty-state">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="12" y1="8" x2="12" y2="12"></line>
              <line x1="12" y1="16" x2="12.01" y2="16"></line>
            </svg>
            <p>No recent activities found</p>
          </div>
        </div>
      </div>
      
      <div class="dashboard-section">
        <div class="section-header">
          <h2>Quick Actions</h2>
        </div>
        <div class="quick-actions">
          <a href="/admin/students/new" class="quick-action">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="8.5" cy="7" r="4"></circle>
              <line x1="20" y1="8" x2="20" y2="14"></line>
              <line x1="23" y1="11" x2="17" y2="11"></line>
            </svg>
            Add Student
          </a>
          
          <a href="/admin/assignments/new" class="quick-action">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
              <polyline points="14 2 14 8 20 8"></polyline>
              <line x1="12" y1="18" x2="12" y2="12"></line>
              <line x1="9" y1="15" x2="15" y2="15"></line>
            </svg>
            Create Assignment
          </a>
          
          <a href="/admin/grades/import" class="quick-action">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
              <polyline points="7 10 12 15 17 10"></polyline>
              <line x1="12" y1="15" x2="12" y2="3"></line>
            </svg>
            Import Grades
          </a>
          
          <a href="/admin/admins" class="quick-action">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
            Manage Admins
          </a>
        </div>
      </div>
    </div>
  </div>
</AdminLayout>

<script>
  import { getCurrentUser, getAdminUsers } from "../../lib/firebase";
  
  document.addEventListener("DOMContentLoaded", async () => {
    try {
      // Get current user
      const user = await getCurrentUser();
      if (user && user.displayName) {
        // Update teacher name in welcome message
        const teacherNameElement = document.getElementById('teacher-name');
        if (teacherNameElement) {
          teacherNameElement.textContent = user.displayName;
        }
      }
      
      // Update admin count
      try {
        const admins = await getAdminUsers();
        const adminCountElement = document.getElementById('admin-count');
        if (adminCountElement) {
          adminCountElement.textContent = admins.length.toString();
        }
      } catch (error) {
        console.error("Failed to get admin count:", error);
      }
      
    } catch (error) {
      console.error("Dashboard error:", error);
    }
  });
</script>

<style>
  .admin-dashboard {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  
  .admin-header {
    margin-bottom: 2rem;
  }
  
  .admin-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: white;
  }
  
  .welcome-message {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.7);
  }
  
  .stats-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2.5rem;
  }
  
  .stat-card {
    background-color: #1a1c25;
    border-radius: 8px;
    padding: 1.5rem;
    display: flex;
    align-items: center;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  
  .stat-icon {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    margin-right: 1rem;
  }
  
  .stat-icon svg {
    width: 24px;
    height: 24px;
  }
  
  .students-icon {
    background-color: rgba(136, 58, 234, 0.1);
    color: rgb(136, 58, 234);
  }
  
  .assignments-icon {
    background-color: rgba(58, 177, 234, 0.1);
    color: rgb(58, 177, 234);
  }
  
  .pending-icon {
    background-color: rgba(234, 179, 58, 0.1);
    color: rgb(234, 179, 58);
  }
  
  .admins-icon {
    background-color: rgba(46, 204, 113, 0.1);
    color: rgb(46, 204, 113);
  }
  
  .stat-content {
    flex-grow: 1;
  }
  
  .stat-value {
    font-size: 1.8rem;
    font-weight: 700;
    color: white;
    line-height: 1;
  }
  
  .stat-label {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.9rem;
    margin-top: 0.25rem;
  }
  
  .stat-action {
    color: rgb(136, 58, 234);
    text-decoration: none;
    font-size: 0.9rem;
    transition: opacity 0.2s;
  }
  
  .stat-action:hover {
    opacity: 0.8;
  }
  
  .dashboard-sections {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
  }
  
  .dashboard-section {
    background-color: #1a1c25;
    border-radius: 8px;
    padding: 1.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
  }
  
  .section-header h2 {
    font-size: 1.2rem;
    color: white;
    margin: 0;
  }
  
  .view-all {
    color: rgb(136, 58, 234);
    text-decoration: none;
    font-size: 0.9rem;
    transition: opacity 0.2s;
  }
  
  .view-all:hover {
    opacity: 0.8;
  }
  
  .activity-list {
    min-height: 200px;
  }
  
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    color: rgba(255, 255, 255, 0.4);
    text-align: center;
  }
  
  .empty-state svg {
    width: 40px;
    height: 40px;
    margin-bottom: 1rem;
  }
  
  .quick-actions {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 1rem;
  }
  
  .quick-action {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    padding: 1.5rem;
    color: white;
    text-decoration: none;
    text-align: center;
    transition: background-color 0.2s;
  }
  
  .quick-action:hover {
    background-color: rgba(136, 58, 234, 0.1);
  }
  
  .quick-action svg {
    width: 24px;
    height: 24px;
    margin-bottom: 0.75rem;
    color: rgb(136, 58, 234);
  }
  
  @media (max-width: 768px) {
    .stats-cards {
      grid-template-columns: 1fr;
    }
    
    .dashboard-sections {
      grid-template-columns: 1fr;
    }
    
    .quick-actions {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>