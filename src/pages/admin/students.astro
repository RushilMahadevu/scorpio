---
import AdminLayout from "../../layouts/AdminLayout.astro";

const title = "Students";
---

<AdminLayout title={title} selectedItem="students">
  <div class="admin-students">
    <div class="admin-header">
      <h1>Manage Students</h1>
      <p>View and manage all students in your classes</p>
      
      <div class="action-bar">
        <div class="search-container">
          <input 
            type="text" 
            id="student-search" 
            placeholder="Search students..." 
            class="search-input"
          />
          <button class="search-button">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="11" cy="11" r="8"></circle>
              <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
          </button>
        </div>
        
        <div class="buttons-container">
          <button class="filter-button">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
            </svg>
            Filter
          </button>
          <a href="/admin/students/new" class="add-button">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="12" y1="5" x2="12" y2="19"></line>
              <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            Add Student
          </a>
        </div>
      </div>
    </div>
    
    <div class="students-list-container">
      <table class="students-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Class</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id="students-table-body">
          <!-- This will be populated with student data -->
        </tbody>
      </table>
      
      <div id="empty-state" class="empty-state">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
          <circle cx="9" cy="7" r="4"></circle>
          <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
          <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
        </svg>
        <p>No students found</p>
        <a href="/admin/students/new" class="add-first-button">Add your first student</a>
      </div>
    </div>
  </div>
</AdminLayout>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // For demo purposes, we'll show the empty state
    const studentsTableBody = document.getElementById("students-table-body");
    const emptyState = document.getElementById("empty-state");
    
    if (studentsTableBody && emptyState) {
      // Toggle this to show/hide the empty state for demo purposes
      const hasStudents = false;
      
      if (hasStudents) {
        emptyState.style.display = "none";
        
        // Add some dummy data
        studentsTableBody.innerHTML = `
          <tr>
            <td>
              <div class="student-name">
                <div class="student-avatar">JS</div>
                <div>John Smith</div>
              </div>
            </td>
            <td>john.smith@example.com</td>
            <td>Mathematics 101</td>
            <td><span class="status-badge active">Active</span></td>
            <td>
              <div class="actions-cell">
                <button class="action-button">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                  </svg>
                </button>
                <button class="action-button">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="3 6 5 6 21 6"></polyline>
                    <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                  </svg>
                </button>
              </div>
            </td>
          </tr>
        `;
      } else {
        emptyState.style.display = "flex";
      }
    }
  });
</script>

<style>
  .admin-students {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }
  
  .admin-header {
    margin-bottom: 2rem;
  }
  
  .admin-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: white;
  }
  
  .admin-header p {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 2rem;
  }
  
  .action-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }
  
  .search-container {
    position: relative;
    flex-grow: 1;
  }
  
  .search-input {
    width: 100%;
    padding: 0.75rem 1rem;
    padding-right: 3rem;
    border-radius: 6px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background-color: rgba(255, 255, 255, 0.05);
    color: white;
    font-size: 1rem;
  }
  
  .search-input:focus {
    outline: none;
    border-color: rgb(136, 58, 234);
  }
  
  .search-button {
    position: absolute;
    right: 0;
    top: 0;
    bottom: 0;
    background: none;
    border: none;
    padding: 0 1rem;
    color: white;
    cursor: pointer;
  }
  
  .search-button svg {
    width: 18px;
    height: 18px;
  }
  
  .buttons-container {
    display: flex;
    gap: 1rem;
  }
  
  .filter-button, .add-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    border-radius: 6px;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.2s;
  }
  
  .filter-button {
    background-color: rgba(255, 255, 255, 0.1);
    border: none;
    color: white;
  }
  
  .filter-button:hover {
    background-color: rgba(255, 255, 255, 0.15);
  }
  
  .add-button {
    background-color: rgb(136, 58, 234);
    border: none;
    color: white;
    text-decoration: none;
  }
  
  .add-button:hover {
    background-color: rgba(136, 58, 234, 0.8);
  }
  
  .filter-button svg, .add-button svg {
    width: 18px;
    height: 18px;
  }
  
  .students-list-container {
    background-color: #1a1c25;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }
  
  .students-table {
    width: 100%;
    border-collapse: collapse;
  }
  
  .students-table th, .students-table td {
    padding: 1rem;
    text-align: left;
  }
  
  .students-table th {
    background-color: rgba(255, 255, 255, 0.05);
    color: rgba(255, 255, 255, 0.7);
    font-weight: 500;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .students-table tbody tr {
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }
  
  .students-table tbody tr:last-child {
    border-bottom: none;
  }
  
  .students-table tbody tr:hover {
    background-color: rgba(255, 255, 255, 0.02);
  }
  
  .student-name {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  .student-avatar {
    width: 36px;
    height: 36px;
    background-color: rgb(136, 58, 234);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 500;
  }
  
  .status-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 50px;
    font-size: 0.8rem;
    font-weight: 500;
  }
  
  .status-badge.active {
    background-color: rgba(46, 204, 113, 0.1);
    color: rgb(46, 204, 113);
  }
  
  .status-badge.inactive {
    background-color: rgba(231, 76, 60, 0.1);
    color: rgb(231, 76, 60);
  }
  
  .actions-cell {
    display: flex;
    gap: 0.5rem;
  }
  
  .action-button {
    background: none;
    border: none;
    padding: 0.5rem;
    border-radius: 4px;
    cursor: pointer;
    color: rgba(255, 255, 255, 0.7);
    transition: background-color 0.2s, color 0.2s;
  }
  
  .action-button:hover {
    background-color: rgba(255, 255, 255, 0.1);
    color: white;
  }
  
  .action-button svg {
    width: 16px;
    height: 16px;
  }
  
  .empty-state {
    display: none;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    color: rgba(255, 255, 255, 0.4);
    text-align: center;
  }
  
  .empty-state svg {
    width: 64px;
    height: 64px;
    margin-bottom: 1.5rem;
  }
  
  .empty-state p {
    font-size: 1.2rem;
    margin-bottom: 1.5rem;
  }
  
  .add-first-button {
    background-color: rgb(136, 58, 234);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 500;
    transition: background-color 0.2s;
  }
  
  .add-first-button:hover {
    background-color: rgba(136, 58, 234, 0.8);
  }
  
  @media (max-width: 768px) {
    .action-bar {
      flex-direction: column;
      align-items: stretch;
    }
    
    .buttons-container {
      justify-content: space-between;
    }
    
    .students-table {
      display: block;
      overflow-x: auto;
    }
  }
</style>