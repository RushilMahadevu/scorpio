---
import ChatButton from "../components/ChatButton.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<ChatButton />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
		/* Admin-consistent color variables for ChatButton */
		--color-bg: #1c1c1c;
		--color-text: #ffffff;
		--color-text-muted: rgba(255, 255, 255, 0.7);
		--color-primary: rgb(139, 0, 0);
		--color-primary-hover: rgba(139, 0, 0, 0.8);
		--color-card-bg: #1a1c25;
		--color-border: rgba(255, 255, 255, 0.1);
		--color-hover-bg: rgba(255, 255, 255, 0.05);
	}
	html {
		font-family: system-ui, sans-serif;
		background: var(--color-bg);
		background-size: 224px;
	}
	body {
		background-color: var(--color-bg);
		color: var(--color-text);
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
