rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is a teacher
    function isTeacher() {
      return request.auth != null && (
        request.auth.token.role == 'teacher' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher'
      );
    }

    // Helper function to check if the user is in the correct organization
    function isMemberOf(orgId) {
      return request.auth != null && (
        request.auth.token.organizationId == orgId ||
        request.auth.token.orgId == orgId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organizationId == orgId
      );
    }

    // Helper function to check if the user is the specific student
    function isStudent(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Unified Users collection - allows users to see peers in their network
    match /users/{userId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId || 
        isTeacher() ||
        // Allow students to read their teacher's profile to resolve Organization ID
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.teacherId == userId ||
        // Allow students to read their teacher's profile via course lookup
        get(/databases/$(database)/documents/courses/$(get(/databases/$(database)/documents/users/$(request.auth.uid)).data.courseId)).data.teacherId == userId
      );
      allow write: if request.auth != null && (
        request.auth.uid == userId ||
        isTeacher()
      );
    }

    // Teachers collection
    match /teachers/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Students collection
    match /students/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && (
        request.auth.uid == userId || 
        (isTeacher() && request.resource.data.teacherId == request.auth.uid)
      );
      allow update: if request.auth != null && (request.auth.uid == userId || isTeacher());
      allow delete: if request.auth != null && (request.auth.uid == userId || isTeacher());
    }

    // Assignments collection
    match /assignments/{assignmentId} {
      allow read: if request.auth != null && (
        resource.data.visibility == 'global' || 
        (resource.data.visibility == 'network' && isMemberOf(resource.data.organizationId)) ||
        resource.data.teacherId == request.auth.uid ||
        resource.data.courseId == get(/databases/$(database)/documents/students/$(request.auth.uid)).data.courseId ||
        resource.data.courseId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.courseId
      );
      allow create: if isTeacher();
      allow update: if isTeacher() && resource.data.teacherId == request.auth.uid;
      allow delete: if isTeacher() && resource.data.teacherId == request.auth.uid;
    }

    // Submissions collection
    match /submissions/{submissionId} {
      allow read: if request.auth != null && (resource.data.studentId == request.auth.uid || isTeacher());
      allow create: if request.auth != null && request.resource.data.studentId == request.auth.uid;
      // Prevent students from updating certain protected fields
      allow update: if isTeacher() || (
        request.auth != null && request.auth.uid == resource.data.studentId && 
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['score', 'feedback', 'gradedAnswers'])
      );
      allow delete: if isTeacher();
    }

    // Resources collection
    match /resources/{resourceId} {
      allow read: if request.auth != null;
      allow write: if isTeacher();
    }
    
    // Courses collection
    match /courses/{courseId} {
      allow read: if request.auth != null;
      allow create: if isTeacher();
      allow update: if isTeacher();
      allow delete: if isTeacher();
    }

    // Practice/Sandbox History
    match /practice_history/{historyId} {
      allow read: if request.auth != null && (resource.data.studentId == request.auth.uid || isTeacher());
      allow create: if request.auth != null && request.resource.data.studentId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.studentId == request.auth.uid;
    }

    match /sandbox_history/{historyId} {
      allow read: if request.auth != null && (resource.data.studentId == request.auth.uid || isTeacher());
      allow create: if request.auth != null && request.resource.data.studentId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.studentId == request.auth.uid;
    }

    // Digital Notebooks
    match /notebooks/{notebookId} {
      allow read, write: if request.auth != null && (
        (request.resource != null && request.resource.data.studentId == request.auth.uid) || 
        (resource != null && (resource.data.studentId == request.auth.uid || resource.id == request.auth.uid)) ||
        (notebookId == request.auth.uid)
      );
    }

    // Tutor Sessions (persisted per student)
    match /tutor_sessions/{sessionId} {
      allow read, write: if request.auth != null && sessionId == request.auth.uid;
    }

    // Organizations / Networks
    match /organizations/{orgId} {
      // Allow authenticated users to get an organization by ID (for joining/verified checks)
      allow get: if request.auth != null;
      // Listing/Querying organizations is reserved for members
      allow list: if isMemberOf(orgId);
      
      // Only teachers can create organizations
      allow create: if isTeacher();
      // Only the owner (the person who created it/pays) can update organization settings
      allow update: if isTeacher() && resource.data.ownerId == request.auth.uid;
    }

    // Usage Analytics logs for metered billing
    match /usage_analytics/{logId} {
      // Allow members of the organization to read their own usage logs
      allow read: if request.auth != null && (
        isMemberOf(resource.data.organizationId) || isTeacher()
      );
      allow list: if request.auth != null && (
        request.query.filters.organizationId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.organizationId ||
        isTeacher()
      );
    }
  }
}
